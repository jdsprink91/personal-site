---
// make sure we're working with a base that makes sense
import "modern-normalize/modern-normalize.css";
import Navigation from "../components/Navigation.astro";
import { ClientRouter } from "astro:transitions";

interface Props {
  pageTitle: string;
  headingCopy: string;
}

const { pageTitle, headingCopy } = Astro.props;
---

<html lang="en">
  <head>
    <ClientRouter />
    <meta charset="utf-8" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/sunflower.svg"
      transition:persist
    />
    <!-- way better to load up the font families from google, caches on view transition -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Jason Sprinkle | {pageTitle}</title>
    <style is:global>
      p {
        margin: 0px;
      }

      :root {
        /* dig this color palette */
        /* go here for inspo if you need it */
        /* https://www.color-hex.com/color-palette/111268 */
        --background-color: #ffecc8;
        --color: #2e2e2e;
        --link-color: #315f72;
        --error-red: #8b0000;
      }

      body {
        background-color: var(--background-color);
        color: var(--color);
        max-width: 30rem;
        margin-right: auto;
        margin-left: auto;
        padding-left: 1rem;
        padding-right: 1rem;
        padding-bottom: 3rem;
        font-family: Work Sans;
      }

      a {
        color: var(--link-color);
      }

      a:focus-visible {
        outline: 2px solid var(--link-color);
        outline-offset: 2px;
      }

      input,
      textarea {
        -webkit-box-shadow: none;
        -moz-box-shadow: none;
        box-shadow: none;
        border: 1px solid var(--link-color);
        border-radius: 8px;
        padding: 0.5rem 0.75rem;
        outline-offset: 2px;
      }

      input:focus,
      textarea:focus {
        outline: 2px solid var(--link-color);
      }

      .invalid {
        outline: 2px solid var(--error-red);
      }

      .invalid:focus {
        outline: 2px solid var(--error-red);
      }

      button {
        display: inline-flex;
        padding-left: 1rem;
        padding-right: 1rem;
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
        line-height: 1.5;
        border-radius: 0.5rem;
        border: 1px solid var(--link-color);
        background-color: var(--link-color);
        cursor: pointer;
        color: white;

        /* clear some things out */
        -webkit-box-shadow: none;
        -moz-box-shadow: none;
        box-shadow: none;
      }

      button:focus {
        outline: 2px solid var(--link-color);
        outline-offset: 2px;
      }

      header {
        position: sticky;
        top: 0px;
        background-color: var(--background-color);
        z-index: 1;
      }

      main > div {
        max-width: 30rem;
        margin-left: auto;
        margin-right: auto;
      }
    </style>
  </head>
  <body>
    <header transition:persist>
      <Navigation />
    </header>
    <main transition:animate="fade">
      <h1>{headingCopy}</h1>
      <slot />
    </main>
  </body>
</html>
